<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.groupproject.HelloController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="114.0" layoutY="10.0" text="Education Feedback System">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <Label layoutX="150.0" layoutY="45.0" text="Welcome Back :)" />
        <Label layoutX="5.0" layoutY="75.0" text="To keep connected with us please login by using email or username and password" />
        <Label layoutX="181.0" layoutY="115.0" text="Sign In as Participant" />
        <Label layoutX="148.0" layoutY="148.0" text="Email/Username" />
        <TextField fx:id="ParticipantEmail" layoutX="148.0" layoutY="169.0" prefHeight="25.0" prefWidth="170.0" />
        <Label layoutX="148.0" layoutY="206.0" text="Password" />
        <PasswordField fx:id="ParticipantPassword" layoutX="148.0" layoutY="226.0" prefHeight="25.0" prefWidth="170.0" />
        <Label layoutX="226.0" layoutY="254.0" text="Forget Password?" />
        <Button layoutX="208.0" layoutY="293.0" mnemonicParsing="false" onAction="#buttonForParticipantLogin" text="Login" />
        <Label layoutX="148.0" layoutY="360.0" text="Don't have an account?">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Button layoutX="273.0" layoutY="357.0" mnemonicParsing="false" onAction="#buttonForParticipantSignUp" text="Sign Up as Participant">
            <font>
                <Font size="10.0" />
            </font>
        </Button>
        <Label fx:id="LoginINFO" layoutX="267.0" layoutY="240.0" />
    </children>


</AnchorPane>
